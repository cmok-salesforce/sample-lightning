<aura:component>
    <aura:attribute name="taskName" type="String"/> 
    <aura:attribute name="arrayIndex" type="Integer"/> 
    
    <tr>
        <th data-label="Task">
            <div class="slds-truncate" title="{!v.taskName}">
                <ui:outputText value="{!v.taskName}"/>
            </div>
        </th>
        <td data-label="Action">
            <c:TodoDeleteButton arrayIndex="{!v.arrayIndex}"/>
        </td>
    </tr>    
</aura:component>